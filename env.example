# ConvergX Environment Configuration
# Copy this file to .env.local for development

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=ConvergX
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/convergx
DATABASE_POOL_SIZE=10

# Redis Configuration (for session management and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-here-change-in-production

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_SECURE=false

# API Keys & External Services
# Add your API keys here as needed
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Network Management API Configuration
NETWORK_API_BASE_URL=https://api.example.com
NETWORK_API_KEY=your-network-api-key
NETWORK_API_TIMEOUT=30000

# Monitoring & Analytics
MONITORING_ENABLED=true
ANALYTICS_ENABLED=false
LOG_LEVEL=info

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@convergx.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.pdf,.csv,.xlsx,.json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Development Configuration
NEXT_TELEMETRY_DISABLED=1
DISABLE_SSL_VERIFY=false 